{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./lib",
    "baseUrl": "./",
    "incremental": true,
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": ["tests/*"],
      "*": ["src/@types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
